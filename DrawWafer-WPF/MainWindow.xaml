<Window x:Class="DrawWafer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawWafer_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1255" WindowState="Maximized">
    <Grid x:Name="MapGrid">
        <ToolBar x:Name="MainToolbar" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top">
            <Label Content="Wafer Size (um) :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="WaferSize" Text="300000" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Die Size X (um) :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="DieSizeX" Text="5096" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Die Size Y (um) :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="DieSizeY" Text="4028" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Wafer Edge (um) :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="WaferEdge" Text="1000" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Scribe Widht (um) :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="ScribeWidth" Text="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Column Count :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="ColumnCount" Text="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="1,2,1,0" SelectedIndex="2">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>
            <Label Content="Map Count :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="MapCount" Text="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="1,2,1,0" SelectedIndex="0">
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="40"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="60"/>
                <ComboBoxItem Content="70"/>
                <ComboBoxItem Content="80"/>
                <ComboBoxItem Content="90"/>
                <ComboBoxItem Content="100"/>
            </ComboBox>
            <Button x:Name="DrawButton" Content="Draw Map" HorizontalAlignment="Left" VerticalAlignment="Top" Click="DrawButton_Click"/>
        </ToolBar>
        <ToolBar x:Name="SingleToolbar" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Visibility="Hidden">
            <Label Content="Zoom Scale :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="ZoomScale" Text="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="1,2,1,0" SelectedIndex="0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="15"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="25"/>
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="35"/>
                <ComboBoxItem Content="40"/>
                <ComboBoxItem Content="45"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="55"/>
                <ComboBoxItem Content="60"/>
                <ComboBoxItem Content="65"/>
                <ComboBoxItem Content="70"/>
                <ComboBoxItem Content="75"/>
                <ComboBoxItem Content="80"/>
                <ComboBoxItem Content="85"/>
                <ComboBoxItem Content="90"/>
                <ComboBoxItem Content="95"/>
                <ComboBoxItem Content="100"/>
            </ComboBox>
        </ToolBar>
        <ScrollViewer x:Name="MapViewer"
            Margin="0,30,0,25"
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="GalleryView"/>
        </ScrollViewer>
        <Label x:Name="MapInfo" Content="Zoom Scale :" Height="25" HorizontalAlignment="Left"  VerticalAlignment="Bottom"/>
    </Grid>
</Window>
