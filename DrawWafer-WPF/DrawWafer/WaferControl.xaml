<UserControl x:Class="WpfWaferMapApp.WaferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Border BorderBrush="LightGray"  BorderThickness="1">
        <Grid>
        <Label x:Name="TopInfo" Content="Wafer Information" HorizontalAlignment="Center" Margin="0,1,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="25"/>
        <Canvas x:Name="WaferCanvas" Margin="1,26,1,26" SizeChanged="WaferCanvas_SizeChanged">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <!-- #1. Y축 방향을 반전 (아래로 증가 -> 위로 증가) -->
                    <ScaleTransform ScaleY="-1"/>
                    <!-- #2. 원점을 캔버스 중앙으로 이동 (코드 비하인드에서 설정) -->
                    <TranslateTransform x:Name="CanvasTranslateTransform"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <ScrollViewer x:Name="MapViewer"
            Margin="0,26,0,26"
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="ZoomCanvas" Margin="1,26,1,26" SizeChanged="WaferCanvas_SizeChanged">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <!-- #1. Y축 방향을 반전 (아래로 증가 -> 위로 증가) -->
                        <ScaleTransform ScaleY="-1"/>
                        <!-- #2. 원점을 캔버스 중앙으로 이동 (코드 비하인드에서 설정) -->
                        <TranslateTransform x:Name="ZoomTranslateTransform"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </ScrollViewer>
        <Label x:Name="bottomInfo" Content="Wafer Information" HorizontalAlignment="Center" Margin="0,0,0,1" VerticalAlignment="Bottom" Height="25"/>

    </Grid>
    </Border>
</UserControl>
